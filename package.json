{
  "name": "schulcloud-synapse-synchronization",
  "description": "Synchronizes Schul-Cloud users, classes and team with a matrix based synapse messaging server",
  "version": "0.0.1",
  "homepage": "https://schul-cloud.org",
  "main": "src/",
  "license": "AGPL-3.0",
  "repository": {
    "git": "git@github.com:schul-cloud/schulcloud-synapse-synchronization.git"
  },
  "engines": {
    "node": "lts/*"
  },
  "scripts": {
    "start": "node index.js",
    "lint": "eslint ./src ./test index.js --ext .js",
    "lint:fix": "eslint ./src ./test index.js --ext .js --fix",
    "test": "npm run mocha --exit",
    "test:integration": "node test/integration/test.js",
    "mocha": "mocha test/mocha/ --exit --recursive --opts ./test/mocha/mocha.opts",
    "coverage": "nyc mocha test/mocha/ --exit --recursive --opts ./test/mocha/mocha.opts"
  },
  "dependencies": {
    "@schul-cloud/commons": "^1.0.16",
    "amqplib": "^0.5.5",
    "axios": "^0.19.2",
    "crypto-js": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "mocha": "^7.1.1",
    "nock": "^12.0.3",
    "nyc": "^15.0.0"
  }
}
