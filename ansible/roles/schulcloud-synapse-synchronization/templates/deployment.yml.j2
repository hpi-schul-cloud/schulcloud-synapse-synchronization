apiVersion: apps/v1
kind: Deployment
metadata:
  name: messenger-sync-deployment
  namespace: {{ NAMESPACE }}
  labels:
    app: messenger-sync
spec:
  replicas: {{ MESSENGER_SYNC_REPLICAS|default("1", true) }}
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      #maxUnavailable: 1
  revisionHistoryLimit: 4
  paused: false
  selector:
    matchLabels:
      app: messenger-sync
  template:
    metadata:
      labels:
        app: messenger-sync
      annotations:
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
        runAsNonRoot: true
      containers:
      - name: messenger-sync
        image: {{ MESSENGER_SYNC_IMAGE_NAME }}:{{ MESSENGER_SYNC_IMAGE_TAG }}
        imagePullPolicy: IfNotPresent
        envFrom:
        - configMapRef:
            name: messenger-sync-configmap
        - secretRef:
            name: messenger-sync-secret
        resources:
          limits:
            cpu: {{ MESSENGER_SYNC_CPU_LIMITS|default("1000m", true) }}
            memory: {{ MESSENGER_SYNC_MEMORY_LIMITS|default("1Gi", true) }}
          requests:
            cpu: {{ MESSENGER_SYNC_CPU_REQUESTS|default("100m", true) }}
            memory: {{ MESSENGER_SYNC_MEMORY_REQUESTS|default("128Mi", true) }}
